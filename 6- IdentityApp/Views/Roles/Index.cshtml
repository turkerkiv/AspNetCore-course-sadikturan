@model List<AppRole>

    <a asp-action="Create" class="btn btn-primary">Create Role</a>

    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Users</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model)
            {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <a asp-controller="Delete" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>