@page
@model EditModel

<form method="post">
    <input type="hidden" asp-for="@Model.Employee.Id">
    <div class="row mb-3">
        <label asp-for="@Model.Employee.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Name" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Employee.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Email" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Employee.Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Department" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="/Employees/Index" class="btn btn-danger">Cancel</a>
</form>
