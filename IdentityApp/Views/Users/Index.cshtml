@model IEnumerable<AppUser>

    <a asp-action="Create" class="btn btn-primary">Create User</a>


    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    @if(User.IsInRole("admin"))
                    {
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure?')"
                        style="display:inline-block">
                        <input type="hidden" name="id" value="@user.Id">
                        <button type="submit" class="btn btn-danger btn-sm ">Delete</button>
                    </form>
                    }   
                </td>
            </tr>
            }
        </tbody>
    </table>